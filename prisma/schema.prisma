generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Size {
  S
  M
  L
  X
  XL
  XXL
}

enum ClothesKind {
  Coat
  TShirt
  Skirt
  Shirt
  Pants
  Hat
  Jacket
}

enum Purpose {
  Work
  GoOut
  Party
}

model User {
  userEmail String @id
  userName  String

  hashKey          String
  clothes          Clothes[]
  suggestions      Int       @default(0)
  useFulSuggestion Int       @default(0)
  refreshToken     String?

  currentLocation String?
  hasLocations HasLocation[]
}

model Clothes {
  id        String      @id
  name      String
  kind      ClothesKind
  tempFloor Float
  tempRoof  Float
  label     String?
  size      Size?

  purposes Purpose[]
  quant Int

  userEmail String
  user      User   @relation(references: [userEmail], fields: [userEmail])
}

model HasLocation {
  userEmail String
  user User @relation(references: [userEmail], fields: [userEmail])

  cityName String
  weatherLocation WeatherLocations @relation(references: [cityName], fields: [cityName])

  @@id([userEmail, cityName])
}

model WeatherLocations {
  cityName String @id

  hasLocations HasLocation[]
}
